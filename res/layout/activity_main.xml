<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="0dp">
    <LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74512D"
            android:orientation="vertical"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo2"
                    android:contentDescription="Holland Bakery Logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nara's Bakery"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/c1" />

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_add_shopping_cart_24"
                    android:contentDescription="Shopping Cart"
                    android:layout_marginEnd="16dp"
                    app:tint="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:background="#F8F5E8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textColor="#74512D"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">

                    <!-- produk 1-->
                    <LinearLayout
                        android:id="@+id/category_danish"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="64dp"
                            android:src="@drawable/danish_coklat"
                            android:contentDescription="Bread" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Danish Coklat"
                            android:textColor="#74512D"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- produk2 -->
                    <LinearLayout
                        android:id="@+id/category_croissant"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:src="@drawable/croisant2"
                            android:contentDescription="Croissant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Croissant"
                            android:textColor="#74512D"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- produk3 -->
                    <LinearLayout
                        android:id="@+id/category_soes"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="59dp"
                            android:src="@drawable/soes"
                            android:contentDescription="Soes" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soes"
                            android:textColor="#74512D"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- produk4 -->
                    <LinearLayout
                        android:id="@+id/category_cookies"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="81dp"
                            android:layout_height="62dp"
                            android:src="@drawable/cookies"
                            android:contentDescription="Cookies" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cookies"
                            android:textColor="#74512D"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- produk5 -->
                    <LinearLayout
                        android:id="@+id/category_cake"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="85dp"
                            android:layout_height="68dp"
                            android:src="@drawable/chocolate_brownies"
                            android:contentDescription="Chocolate Cake" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chocolate Cake"
                            android:textColor="#74512D"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Banner -->
        <LinearLayout android:id="@+id/promo_banner_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F8F5E8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Offers"
            android:textColor="#74512D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/promo_banner">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekend Special!"
                        android:textColor="#74512D"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get 20% off on all pastries"
                        android:textColor="#74512D"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        android:paddingTop="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Now"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#74512D"
                        app:cornerRadius="20dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner"
                    android:contentDescription="Weekend Special Offer" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <!-- Popular Items -->
