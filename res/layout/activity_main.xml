                                android:layout_height="12dp"
                                android:src="@drawable/baseline_favorite_24"
                                android:contentDescription="Rating Star"
                                app:tint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textColor="#7C7C7C"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="4dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_favorite_border_24"
                                android:contentDescription="Add to Favorites"
                                app:tint="#74512D" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- produk 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/popular_item_2"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#F8F5E8"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sandwich"
                            android:contentDescription="Sandwich" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="8dp"
                            android:text="Sandwich"
                            android:textColor="#74512D"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Rp 15.000"
                            android:textColor="#000000"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/baseline_favorite_24"
                                android:contentDescription="Rating Star"
                                app:tint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.7"
                                android:textColor="#7C7C7C"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="4dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_favorite_border_24"
                                android:contentDescription="Add to Favorites"
                                app:tint="#74512D" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- produk 3-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/popular_item_3"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#F8F5E8"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cake"
                            android:contentDescription="Chocolate Cake" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="8dp"
                            android:text="Strawberry Cake"
                            android:textColor="#74512D"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Rp 45.000"
                            android:textColor="#000000"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/baseline_favorite_24"
                                android:contentDescription="Rating Star"
                                app:tint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.9"
                                android:textColor="#7C7C7C"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="4dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
